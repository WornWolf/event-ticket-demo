<!-- partials/background.ejs -->
<style>
    body {
        background: var(--bg); /* ใช้ตัวแปร --bg จาก theme */
        position: relative;
        overflow: hidden;
        margin: 0;
    }

    .particles {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: -1;
    }

    .particle {
        position: absolute;
        width: 8px;
        height: 8px;
        background: var(--primary); /* ใช้ตัวแปร --primary สำหรับสีอนุภาค */
        border-radius: 50%;
        opacity: 0.6;
        animation: float 20s infinite;
    }

    @keyframes float {
        0% {
            transform: translateY(0); 
            opacity: 0.6;
        }
        100% {
            transform: translateY(-100vh);
            opacity: 0;
        }
    }

    /* เพิ่มอนุภาคมากขึ้น หรือปรับการวางตำแหน่ง */
    .particles .particle:nth-child(1) {
        left: 10%; animation-delay: 0s;
    }
    .particles .particle:nth-child(2) {
        left: 30%; animation-delay: 3s;
    }
    .particles .particle:nth-child(3) {
        left: 50%; animation-delay: 6s;
    }
    .particles .particle:nth-child(4) {
        left: 70%; animation-delay: 9s;
    }
    .particles .particle:nth-child(5) {
        left: 90%; animation-delay: 12s;
    }
    /* เพิ่มอนุภาคใหม่ */
    .particles .particle:nth-child(6) {
        left: 20%; animation-delay: 4s;
    }
    .particles .particle:nth-child(7) {
        left: 40%; animation-delay: 7s;
    }
    .particles .particle:nth-child(8) {
        left: 60%; animation-delay: 10s;
    }
    .particles .particle:nth-child(9) {
        left: 80%; animation-delay: 13s;
    }
</style>

<div class="particles">
    <!-- สร้างอนุภาคหลายตัว -->
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
</div>
