<% layout('layout') -%>

<div class="row g-4">
  <!-- Sidebar -->
  <div class="col-lg-3">
    <div class="list-group shadow-sm">
      <button
        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
        data-bs-toggle="collapse"
        data-bs-target="#acctMenu"
        aria-expanded="true"
        aria-controls="acctMenu"
        style="border:0"
      >
        <span><i class="bi bi-gear me-2"></i> Account Setting</span>
        <i class="bi bi-chevron-up" id="acctCaret"></i>
      </button>

      <div id="acctMenu" class="collapse show">
        <a href="#basic" class="list-group-item list-group-item-action active" data-bs-toggle="tab">Basic Information</a>
        <a href="#password" class="list-group-item list-group-item-action" data-bs-toggle="tab">Change Password</a>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="col-lg-9">
    <div class="card shadow-soft">
      <div class="card-body p-4">
        <div class="tab-content">

          <!-- BASIC -->
          <div class="tab-pane fade show active" id="basic">
            <h3 class="mb-1">Basic Information</h3>
            <div class="text-muted mb-3"><%= me.email %></div>

            <!-- Avatar block -->
            <div class="d-flex align-items-center gap-3 mb-3">
              <img id="avatarPreview"
                   src="<%= me.avatarUrl || '/img/default-avatar.png' %>"
                   alt="avatar"
                   class="rounded-circle shadow-sm"
                   style="width:96px;height:96px;object-fit:cover;">
              <div class="flex-grow-1">
                <label for="avatar" class="form-label mb-1">Avatar image</label>
                <input id="avatar" type="file" name="avatar" accept="image/*" class="form-control">
                <div class="form-text">
                  รองรับไฟล์ .jpg .jpeg .png .webp (สูงสุด 2 MB)
                </div>
                <div class="form-check mt-2">
                  <input class="form-check-input" type="checkbox" id="removeAvatar" name="removeAvatar" value="1">
                  <label class="form-check-label" for="removeAvatar">ลบรูปโปรไฟล์ (ใช้ค่าเริ่มต้น)</label>
                </div>
              </div>
            </div>

            <!-- Form fields -->
            <form id="basicForm" class="row g-3" enctype="multipart/form-data">
              <% if (typeof csrfToken !== 'undefined') { %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <% } %>

              <div class="col-md-6">
                <label class="form-label">First Name</label>
                <input name="firstName" class="form-control" value="<%= me.firstName || '' %>">
              </div>
              <div class="col-md-6">
                <label class="form-label">Last Name</label>
                <input name="lastName" class="form-control" value="<%= me.lastName || '' %>">
              </div>

              <div class="col-md-6">
                <label class="form-label required">Display Name<span class="text-danger">*</span></label>
                <input name="name" class="form-control" value="<%= me.name %>" required>
              </div>

              <div class="col-md-6">
                <label class="form-label">Phone number</label>
                <div class="input-group">
                  <span class="input-group-text">+66</span>
                  <input name="phone" class="form-control" placeholder="08xxxxxxxx"
                        type="tel"
                        inputmode="numeric"
                        pattern="[0-9]*"
                        maxlength="9"
                        value="<%= (me.phone || '').replace(/^(\+?66)/,'') %>"
                        oninput="this.value = this.value.replace(/\D/g,'')">
                </div>
              </div>

              <div class="col-md-6">
                <label class="form-label">Date of Birth</label>
                <input name="dob" type="date" class="form-control"
                       value="<%= me.dob ? new Date(me.dob).toISOString().slice(0,10) : '' %>">
              </div>

              <div class="col-md-6">
                <label class="form-label">Gender</label>
                <select name="gender" class="form-select">
                  <option value=""       <%= !me.gender ? 'selected' : '' %>>Prefer not to say</option>
                  <option value="male"   <%= me.gender==='male'   ? 'selected' : '' %>>Male</option>
                  <option value="female" <%= me.gender==='female' ? 'selected' : '' %>>Female</option>
                  <option value="other"  <%= me.gender==='other'  ? 'selected' : '' %>>Other</option>
                </select>
              </div>

              <div class="col-12">
                <button id="btnSaveBasic" class="btn btn-primary px-4 rounded-pill" type="submit">
                  <i class="bi bi-save me-1"></i> Save
                </button>
              </div>
            </form>
          </div>

          <!-- PASSWORD -->
          <div class="tab-pane fade" id="password">
            <h3 class="mb-3">Change Password</h3>

            <form id="pwdForm" method="post" action="/me/password" class="row g-3" novalidate>
              <% if (typeof csrfToken !== 'undefined') { %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <% } %>

              <div class="col-12">
                <label class="form-label">Current Password</label>
                <div class="input-group">
                  <input id="pwCurrent" name="currentPassword" type="password" class="form-control" required autocomplete="current-password" placeholder="Enter your password">
                  <button class="btn btn-outline-secondary toggle-eye" type="button"><i class="bi bi-eye"></i></button>
                </div>
              </div>

              <div class="col-12">
                <label class="form-label">New Password</label>
                <div class="input-group">
                  <input id="pwNew" name="newPassword" type="password" class="form-control" required minlength="8" autocomplete="new-password" placeholder="Enter your new password" aria-describedby="pwHelp">
                  <button class="btn btn-outline-secondary toggle-eye" type="button"><i class="bi bi-eye"></i></button>
                </div>
                <div id="pwHelp" class="form-text">
                  อย่างน้อย 8 ตัวอักษร และควรมี ตัวพิมพ์เล็ก/ใหญ่ ตัวเลข และสัญลักษณ์
                </div>
                <div class="progress mt-2" style="height:8px">
                  <div id="pwStrength" class="progress-bar" role="progressbar" style="width:0%"></div>
                </div>
                <div id="pwHint" class="small mt-1 text-muted"></div>
              </div>

              <div class="col-12">
                <label class="form-label">Confirm New Password</label>
                <div class="input-group">
                  <input id="pwConfirm" name="confirmPassword" type="password" class="form-control" required minlength="8" autocomplete="new-password" placeholder="Enter your confirm password">
                  <button class="btn btn-outline-secondary toggle-eye" type="button"><i class="bi bi-eye"></i></button>
                </div>
                <div id="matchMsg" class="small mt-1"></div>
              </div>

              <div class="col-12">
                <button id="btnSavePw" class="btn btn-success px-4 rounded-pill" type="submit" disabled>
                  <i class="bi bi-save me-1"></i> Save
                </button>
              </div>
            </form>
          </div>

        </div><!-- /tab-content -->
      </div>
    </div>
  </div>
</div>

<!-- Upload Modal -->
<div id="uploadModal" style="display:none;">
  <div class="modal-overlay"></div>
  <div class="modal-content d-flex flex-column justify-content-center align-items-center">
    <div class="spinner-border text-primary me-2" style="width: 4rem; height: 4rem" role="status" id="uploadSpinner"></div>
    <span id="uploadMsg" class="mt-3 fs-5 fw-semibold text-center">กำลังอัปโหลด...</span>
  </div>
</div>

<!-- Crop Modal -->
<div id="cropModal" style="display:none;">
  <div class="modal-overlay"></div>
  <div class="modal-content">
    <div class="modal-header d-flex justify-content-between align-items-center mb-2">
      <h5 class="m-0">Crop Avatar</h5>
      <button type="button" class="btn-close" id="btnCropCancel"></button>
    </div>
    <div class="modal-body text-center my-3">
      <img id="cropImage" style="max-width:100%; max-height:400px; display:block; margin:auto;">
    </div>
    <div class="modal-footer justify-content-end gap-2">
      <button id="btnCropCancel" class="btn btn-secondary">Cancel</button>
      <button id="btnCropConfirm" class="btn btn-warning">Crop & Save</button>
    </div>
  </div>
</div>

<!-- Crop Modal -->
<link  href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

<link rel="stylesheet" href="/css/acc-settings.css">

<script src="/js/acc-settings.js"></script>
